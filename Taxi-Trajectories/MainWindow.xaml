        <TextBox Name="Id"  HorizontalAlignment="Right" Margin="0,28,210,0" TextWrapping="Wrap" Width="109" Height="43" VerticalAlignment="Top" FontSize="20" Text="1"/>
        <Button Content="清空显示" Height="43" Margin="244,28,0,0" VerticalAlignment="Top" Click="Button_Click_2" RenderTransformOrigin="0.697,0.605" HorizontalAlignment="Left" Width="122"/>
        <Button Content="全部展示" HorizontalAlignment="Right" Height="43" Margin="0,28,358,0" VerticalAlignment="Top" Width="118" Click="Button_Click_3"/>

    </Grid>
</Window>
